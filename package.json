  "type": "module",
  "main": "./dist/vue-calendar.umd.js",
  "module": "./dist/vue-calendar.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
